{
	"parser": "@typescript-eslint/parser",
	"extends": [
	  "eslint:recommended",
	  "plugin:@typescript-eslint/recommended"
	],
	"env": {
		"browser": false,
		"commonjs": false,
		"es6": true,
		"node": true,
		"mocha": true,
		"jest": true
	},
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"rules": {
		"no-const-assign": "warn",
		"no-this-before-super": "warn",
		"no-undef": "warn",
		"no-unreachable": "warn",
		"@typescript-eslint/no-unused-vars": "warn",
		"constructor-super": "warn",
		"valid-typeof": "warn"
	}
}
